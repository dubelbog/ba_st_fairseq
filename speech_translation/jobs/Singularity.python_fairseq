Bootstrap:docker
From:ubuntu:latest

%post
    apt-get update
    apt-get -y install python3-pip locales
    pip3 install Cython fairseq datautil ffmpeg hydra numpy pandas pydub sacreblue sentencepiece torch torchaudio
    locale-gen en_US.UTF-8

%labels
MAINTAINER Bogumila

%environment
    LANG=en_US.UTF-8
    LANGUAGE=en_US:en
    LC_ALL=en_US.UTF-8
    export LANG LANGUAGE LC_ALL

%runscript
echo "Starts the job"
